
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<%= render partial: 'comments/form' %>

<% @comments.each do |comment| %>
  <div><%= comment.user.name || comment.user.email %> said <%= comment.comment %><div>
<% end %>

<hr>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
